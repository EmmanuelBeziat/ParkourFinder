.btn
	--btn-font-size 1rem
	--btn-padding 1em 2em
	transition .25s ease-in-out
	box-shadow none
	outline none
	background var(--color-background)
	border 1px solid var(--color-primary)
	color var(--color-primary)
	padding var(--btn-padding)
	cursor pointer
	border-radius .15em
	font-size var(--btn-font-size)
	font-family var(--font-stack-common)

	&:hover
		background var(--color-primary)
		text-shadow 1px 1px 0 var(--shadow)
		color var(--color-background)
	&:active
		background var(--color-primary-alt)
		text-shadow 1px 1px 0 var(--shadow)

.btn + .btn
	margin-left 5px

.btn--primary
	background var(--color-primary)
	color var(--color-background)

	&:hover
		background var(--color-background)
		text-shadow 1px 1px 0 var(--shadow)
		color var(--color-primary)
	&:active
		background darken(white, 5%)
		text-shadow 1px 1px 0 var(--shadow)

.btn--lg
	--btn-font-size 1.25rem
	--btn-padding .5em 2em

.btn--full
	display block
	text-align center
	width auto

.btn--icon
	padding .25em
	font-size 1.25rem

.btn[disabled]
	color var(--shadow) !important
	border-color var(--shadow) !important
	background darken(white, 5%) !important
	text-shadow none !important
	cursor not-allowed

	&[data-tooltip]::before
		content none !important

.btn--map
	size 2.5em
	line-height 1em
	text-align center
	border-radius 50%
	position fixed
	color var(--color-primary)
	background darken(white, 5%)
	bottom 1rem
	right 1rem
	position absolute
	z-index 410
	box-shadow 2px 2px 4px var(--shadow)
	text-shadow 1px 1px 0 var(--shadow)

	&:hover
		background var(--color-background)
		color var(--color-primary)

	&:active
		transform scale(.95)
		transition .05s ease-out

	&.is-locked
		background var(--color-primary)
		color var(--color-background)
		border 2px solid var(--color-background)
		&:hover
			background var(--color-primary-alt)
			color var(--color-background)
