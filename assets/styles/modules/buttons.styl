.btn
	transition .25s ease
	box-shadow none
	outline none
	background $color-white
	border 1px solid $color-red
	color $color-red
	padding 1em 2em
	cursor pointer
	border-radius .15em
	font-family $font-stack-common

	&:hover
		background $color-red
		text-shadow 1px 1px 0 $color-shadow
		color $color-white
	&:active
		background darken($color-red, 15%)
		text-shadow 1px 1px 0 $color-shadow

.btn + .btn
	margin-left 5px

.btn--primary
	background $color-red
	color $color-white

.btn--icon
	padding .25em
	font-size 1.25rem

.btn[disabled]
	color $color-shadow !important
	border-color $color-shadow !important
	background darken($color-white, 5%) !important
	text-shadow none !important
	cursor not-allowed

	&[data-tooltip]::before
		content none !important
